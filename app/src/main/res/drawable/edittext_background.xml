<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define solid fill color with 75% transparency -->
    <solid android:color="#BFFFFFFF"/> <!-- White background with 75% opacity -->

    <!-- Define rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Define border stroke with 75% transparency -->
    <stroke
        android:width="2dp"
        android:color="#BF6200EE"/> <!-- Purple border with 75% opacity -->

    <!-- Define padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>

